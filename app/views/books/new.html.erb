<h2>Legg til ny bok i samlingen din</h2>

<p id="feedback" class="notice"></p>

<%= form_tag("/search", :method => "get", :id => "search_form")%>
	<fieldset>
		<legend>Finn eksisterende</legend>
		<%= label_tag(:q_book, "Søk etter:") %>
		  <%= text_field_tag(:q_book) %>
	</fieldset>
	</form>

<%= form_for @book, :url => "create" do |b| %>
	<fieldset>
		<legend>Legg til ny bok</legend>
		<%= b.label :name, "Bokens navn"%>
		<%= b.text_field :name %>
		<%= b.label :author, "Forfatter"%>
		<%= b.text_field :author%>
		<%= b.label :publisher, "Forlag"%>
		<%= b.text_field :publisher%>
		<%= b.label :language, "Språk"%>
		<%= b.text_field :language%>
		<%= b.label :isbn, "ISBN"%>
		<%= b.text_field :isbn %>
	</fieldset>
	<%= b.submit "Lagre ny bok i samling!"%>

<% end %>
