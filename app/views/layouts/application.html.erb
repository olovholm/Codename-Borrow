<!DOCTYPE html>
<html>
<head>
  <title>Borrow</title>	
  <%= javascript_include_tag "application" %>
	<%= stylesheet_link_tag		 "vendor"%>
	<%= stylesheet_link_tag		 "application"%>
	<%= stylesheet_link_tag    "jquery-ui-1.8.16.custom.css" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
	<nav id="top_menu">
		<% if session[:username] && session[:user_id]%>
			<%= render :partial => "shared/top_logged_in" %>
		<% else %>
		 	<%=	render :partial => "shared/top_not_logged_in" %>
		<% end %>
	</nav>
			
	<header>
		<h1><%= link_to "Byttelåne", :controller => "pages"%></h1>
	</header>
	<div id="wrapper">
		<nav id="main_nav">
			<% if session[:username] && session[:user_id]%>
				<%= render :partial => "shared/main_logged_in" %>
			<% else %>
			 	<%=	render :partial => "shared/main_not_logged_in" %>
			<% end %>
		</nav>
		<%= "<div class='success'>#{flash[:success]}</div>".html_safe unless flash[:success].nil?%>
		<%= "<div class='notice'>#{flash[:notice]}</div>".html_safe unless flash[:notice].nil?%>
		<%= "<div class='error'>#{flash[:error]}</div>".html_safe unless flash[:error].nil?%>
		<article>
		<%= yield %>
		</article>
	</div>
	<footer>
	<nav>
		<ul>
			<li><%= link_to "Om siden",:controller => "pages", :action => "om"%></li>
			<li><%= link_to "Hvorfor byttelåne", :controller => "pages", :action => "hvorfor"%></li>
			<li><%= link_to "Kontakt oss", :controller => "pages", :action => "kontakt"%></li>
		</ul>
	</nav>
		<p>This page is made by Ola Loevholm</p>
	</footer>
</div>

</body>
</html>
